
@{
    ViewBag.Title = "Setting - Homii";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>AdminSetting Index</h2>*@



<div class="testimonials">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-md-6">
                <div class="main-HD">
                    <h1>Setting </h1>
                    <button type="button" class="btn btn-primary city-btn" data-toggle="modal" onclick="AddSetting()">Add Setting</button>
                </div>
            </div>
            <div class="col-md-6">
                <div class="pro-details">

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="custom-table mt-0">
                    <div class="table-responsive-lg">
                        <table class="table" id="example">
                            <thead class="thead-dark">
                                <tr>
                                    @*<th scope="col" class="th-width-1">ID</th>*@
                                    <th scope="col" class="th-width-2">KEY</th>
                                    <th scope="col">VALUES</th>
                                    @*<th scope="col">Slug</th>*@
                                    <th scope="col" class="th-width-3">Action</th>
                                </tr>
                            </thead>

                        </table>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>


@*Edit Modal For GET DATA*@

<div class="modal fade" id="editmodal" tabindex="-1" role="dialog" aria-labelledby="write-a-reviewLabel" aria-hidden="true">
    <div class="modal-dialog modal-md" role="document">
        <form class="parsleyvalcs" id="SettingUpdateForm">
            <div class="modal-content modal-content-review">
                <div class="modal-header">
                    <h5 class="modal-title" id="write-a-reviewLabel">Edit Setting</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body modal-body-review">
                    <div class="row m_-10 editprofile">
                        <div class="col-md-6 p_10">
                            <div class="form-group">
                                <input type="hidden" class="form-control" id="SettingID">
                                <label>Setting Key</label>
                                <input type="text" class="form-control" id="SettingKey" required data-parsley-required-message="Setting key is required" disabled>
                            </div>
                            <div class="form-group">
                                <label>Setting Value</label>
                                <input type="text" class="form-control" id="SettingValue" data-parsley-type="number" data-parsley-required-message="Setting value is required" required>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        @*<button type="button" class="btn btn-primary btn-custom" id="btnSave">Save</button>*@
                        <button type="submit" class="btn btn-primary btn-custom" id="btnUpdate">Update</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@*ADD Modal For GET DATA*@
<div class="modal fade" id="Addmodal" tabindex="-1" role="dialog" aria-labelledby="write-a-reviewLabel" aria-hidden="true">
    <div class="modal-dialog modal-md" role="document">
        <form class="parsleyvalcs" id="SettingADDForm">
            <div class="modal-content modal-content-review">
                <div class="modal-header">
                    <h5 class="modal-title" id="write-a-reviewLabel">ADD Setting</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body modal-body-review">
                    <div class="row m_-10 editprofile">
                        <div class="col-md-6 p_10">
                            <div class="form-group">
                                @*<input type="hidden" class="form-control" id="SettingID">*@
                                <label>Setting Key</label>
                                <input type="text" class="form-control" id="SettingKeyAdd" required data-parsley-required-message="Setting key is required">
                            </div>
                            <div class="form-group">
                                <label>Setting Value</label>
                                <input type="text" class="form-control" id="SettingValueAdd" data-parsley-type="number" data-parsley-required-message="Setting value is required" required>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        @*<button type="button" class="btn btn-primary btn-custom" id="btnSave">Save</button>*@
                        <button type="submit" class="btn btn-primary btn-custom" id="btnUpdate">Save</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



@*//modal for delete*@

<div class="modal fade" id="deletemodal" tabindex="-1" role="dialog" aria-labelledby="write-a-reviewLabel" aria-hidden="true">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content modal-content-review">
            <div class="modal-header">
                <h5 class="modal-title" id="write-a-reviewLabel">Delete Setting</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-body-review">
                <p>Are you sure?</p>
            </div>
            <div class="modal-footer">
                <button type="button" id="DeleteId" class="btn btn-primary btn-custom">Yes</button>
                <button type="button" data-dismiss="modal" class="btn btn-primary btn-custom">No</button>
            </div>
        </div>
    </div>
</div>


@section FooterScripts{
    <script src="~/scripts/PageJS/AdminSetting.js"></script>
}