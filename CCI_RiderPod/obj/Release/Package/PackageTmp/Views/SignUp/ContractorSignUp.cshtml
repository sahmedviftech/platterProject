@{
    ViewBag.Title = "Contractor Signup - Homii";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="bg-login signup">
    <div class="container position-relative cstm_zindex">
        <div class="row">
            <div class="col-lg-7">
                <div class="login-form mb-4 mb-lg-0">
                    <a href="https://portal.homii.ca/"><img src="~/Content/assets/img/mid-logo-transparent.png" alt=""></a>
                    <h2>Create Contractor Account</h2>

                    <form class="parsleyvalcs inhert" id="Registers-Form">
                        <div class="form-row m-0">
                            <div class="form-group col-md-6 pl-md-0">
                                <input type="text" class="form-control login-custm-form" title="" name="CompanyName" id="CompanyName" placeholder="Company Name" required data-parsley-trigger="keyup" data-parsley-required-message="Company Name is required" data-placement="bottom">
                            </div>
                            <div class="form-group col-md-6 pr-md-0">
                                @*<input type="text" class="form-control login-custm-form"   data-placement="bottom"  title="Enter Your Company Name" id="BusinessPhoneNumber" placeholder="Business Phone Number" required data-parsley-pattern="^[0-9]\d{2}-\d{3}-\d{4}$" data-parsley-pattern-message="Format: 111-111-1111" data-parsley-trigger="keyup" data-parsley-required-message="Business Phone is required">*@
                                @*<input type="text" class="form-control login-custm-form"  data-placement="bottom"  title="Enter Your Company Name" name="BusinessPhoneNumber" id="BusinessPhoneNumber" data-parsley-pattern="^\d{3}-\d{3}-\d{4}$" data-parsley-trigger="onchange" value="" placeholder="Business Phone Number" required="Requireed Format: 111-111-1111">*@
                                <input type="text" class="form-control login-custm-form" title="" data-placement="bottom" name="BusinessPhoneNumber" id="BusinessPhoneNumber" data-parsley-pattern="^\d{3}-\d{3}-\d{4}$" parsley-type="phone" data-parsley-trigger="keydown" required="Requireed Format: 111-111-1111" value="" placeholder="Business Phone Number" maxlength="12" onkeypress="return event.charCode >= 48 && event.charCode <= 57">

                            </div>


                            <div class="form-group col-md-6 pl-md-0">
                                <input type="text" class="form-control login-custm-form" title="" data-placement="bottom" name="BusinessAddress" id="BusinessAddress" placeholder="Business Address" required data-parsley-trigger="keyup" data-parsley-required-message="Business Address is required">
                            </div>
                            <div class="form-group col-md-6 pr-md-0">
                                <input type="text" class="form-control login-custm-form" title="" data-placement="bottom" name="PostalCode" id="PostalCode" placeholder="Postal Code" required data-parsley-pattern="^(\d{5}(-\d{4})?|[A-Z]\d[A-Z] ?\d[A-Z]\d)$" data-parsley-pattern-message="Format : A1A1A1" data-parsley-minlength="6" data-parsley-maxlength="6" data-parsley-trigger="keyup" data-parsley-required-message="Postal Code is required">
                            </div>


                            <div class="form-group col-md-12 pl-md-0 pr-md-0">

                                <select class="form-control login-custm-form" title="" data-placement="bottom" id="City" data-parsley-min="1" data-parsley-min-message="City is required"></select>

                            </div>
                            <div class="form-group col-md-6 pl-md-0">
                                <input type="text" class="form-control login-custm-form" title="" data-placement="bottom" name="FirstName" id="FirstName" placeholder="First Name" required data-parsley-trigger="keyup" data-parsley-required-message="First Name is required" data-parsley-pattern="^[a-zA-Z]+$" data-parsley-pattern-message="First Name should be without space">
                            </div>
                            <div class="form-group col-md-6 pr-md-0">
                                <input type="text" class="form-control login-custm-form" title="" data-placement="bottom" name="LastName" id="LastName" placeholder="Last Name" required data-parsley-trigger="keyup" data-parsley-required-message="Last Name is required" data-parsley-pattern="^[a-zA-Z]+$" data-parsley-pattern-message="Last Name should be without space">
                            </div>

                            <div class="form-group col-md-6 pl-md-0">
                                @*<input type="text" class="form-control login-custm-form"   data-placement="bottom"  title="Enter Your Company Name" placeholder="Legal Structure">*@
                                <select class="form-control login-custm-form" title="" data-placement="bottom" id="LegalStructure" required="" data-parsley-required-message="Legal Structure is required">
                                    <option value="">Please Select Legal Structure</option>
                                    <option value="Sole Proprietor">Sole Proprietor</option>
                                    <option value="Partnership">Partnership</option>
                                    <option value="Incorporated">Incorporated</option>
                                    <option value="Limited Partnership">Limited Partnership</option>
                                </select>
                            </div>
                            <div class="form-group col-md-6 pr-md-0">
                                @*<input type="text" class="form-control login-custm-form"   data-placement="bottom"  title="Enter Your Company Name" placeholder="Legal Structure">*@
                                <select class="form-control login-custm-form" title="" data-placement="bottom" id="Interval" required="" data-parsley-required-message="Interval is required">
                                    <option value="">Please Select Interval</option>
                                    <option value="Monthly">$300 Monthly</option>
                                    <option value="Annually">$3000 Annually</option>
                                    
                                </select>
                            </div>
                            <div class="form-group col-md-6 pl-md-0">
                                @*<input type="text" class="form-control login-custm-form"   data-placement="bottom"  title="Enter Your Company Name" id="NumberOfEmployees" placeholder="Number of Employees" required data-parsley-type="number" data-parsley-trigger="keyup" data-parsley-required-message="Number Of Employees required">*@
                                <input type="text" class="form-control login-custm-form" title="" data-placement="bottom" name="NumberOfEmployees" id="NumberOfEmployees" data-parsley-pattern="^(([0-9]*)|(([0-9]*)\.([0-9]*)))$" data-parsley-trigger="keyup" onkeypress="return event.charCode >= 48 && event.charCode <= 57" placeholder="Number of Employees" required data-parsley-type="number" data-parsley-required-message="Number Of Employees required">

                            </div>


                            @*<div class="form-group login-custm-form col-md-6 pr-md-0">
            @*<input type="number" class="form-control login-custm-form"   data-placement="bottom"  title="Enter Your Company Name" id="InBusinessSince" placeholder="In Business Since" onchange="ClearBorder(this.id)" oninput="validity.valid || (value = '');" min="0">*-@
            <input type="text" class="form-group login-custm-form yearpicker cstmdatepickfeild" readonly id="InBusinessSince"  required="true" data-parsley-required-message="Year is required" >
        </div>*@


                            <div class="form-group login-custm-form col-md-6 pr-md-0">
                                <input type="text" id="InBusinessSince" required="" title="" data-parsley-required-message="Year is required" class="form-group login-custm-form yearpicker cstmdatepickfeild" placeholder="Select Year" data-placement="bottom" />

                            </div>

                            <div class="form-group col-md-6 pl-md-0">
                                <input type="email" class="form-control login-custm-form" title="" data-placement="bottom" name="Email" id="Email" placeholder="Email" required data-parsley-type="email" data-parsley-trigger="keyup" data-parsley-required-message="Email is required">
                            </div>
                            <div class="form-group col-md-6 pr-md-0">
                                <input type="email" class="form-control login-custm-form" title="" data-placement="bottom" name="ConfirmEmail" id="ConfirmEmail" placeholder="Confirm Email" required data-parsley-equalto="#Email" data-parsley-trigger="keyup" data-parsley-required-message="Confirm Email is required">
                            </div>
                            <div class="form-group col-md-6 pl-md-0">
                                <input type="password" class="form-control login-custm-form" title="" data-placement="bottom" name="Password" id="Password" placeholder="Password" required data-parsley-length="[8, 16]" data-parsley-trigger="keyup" data-parsley-required-message="Password is required">
                            </div>
                            <div class="form-group col-md-6 pr-md-0">
                                <input type="password" class="form-control login-custm-form" title="" data-placement="bottom" name="ConfirmPassword" id="ConfirmPassword" placeholder="Confirm Password" data-parsley-equalto="#Password" data-parsley-trigger="keyup" required data-parsley-required-message="Confirm Password is required">
                            </div>
                            <div class="col-md-12 pl-md-0 pr-md-0 mt-50">
                                <div class="form-check checkbox-change">
                                    <input class="form-check-input" type="checkbox" id="gridCheck" required data-parsley-required data-parsley-required-message="Terms and Conditions is required">
                                    <label class="form-check-label" for="gridCheck">
                                        I AGREE I have read and agree to Homii <a href="https://homii.ca/terms-conditions/#contractor" class="login-member-anchr">Terms and Conditions</a>
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-12 pl-md-0 pr-md-0">
                                <div class="form-check checkbox-change">
                                    <input class="form-check-input" type="checkbox" id="gridCheck1" required data-parsley-required data-parsley-required-message="Privacy Policy is required">
                                    <label class="form-check-label" for="gridCheck1">
                                        I AGREE I have read and agree to Homii <a href="https://homii.ca/Privacy-Policy/" class="login-member-anchr">Privacy Policy</a>
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-12 pl-md-0 pr-md-0">
                                <div class="form-check checkbox-change">
                                    <input class="form-check-input" type="checkbox" id="gridCheck2" required data-parsley-required data-parsley-required-message="Code of Conduct is required">
                                    <label class="form-check-label" for="gridCheck2">
                                        I AGREE I have read and agree to Homii <a href="https://homii.ca/code-of-conduct/" class="login-member-anchr">Code of Conduct</a>
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-12 pl-md-0 pr-md-0">
                                <div class="form-check checkbox-change">
                                    <input class="form-check-input" type="checkbox" id="gridCheck3" required data-parsley-required data-parsley-required-message="Verification is required">
                                    <label class="form-check-label" for="gridCheck3">
                                        I VERIFY that I am the owner of or I am authorized by to register this business and manage this listing
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-12 pl-md-0 pr-md-0">
                                @*<div id="captcha" class="g-recaptcha" data-expired-callback="expiredReCaptcha" data-callback="verifyReCaptcha" lang="en" data-sitekey="6LdcXOcUAAAAACrmT3qYDM0-A9Yc0pwIVS8uhCwz"> </div>*@
                                <div id="captcha" class="g-recaptcha" data-expired-callback="expiredReCaptcha" data-callback="verifyReCaptcha" lang="en" data-sitekey="6Lex2K4ZAAAAAE1YAuuZhV3LwEBH_rCOT_mHvIhG"> </div>
                                <span id="error" style="color: red; font-size: 16px;">please verify  your are not a bot..</span>
                            </div>
                        </div>
                        <button type="submit" id="submit" class="btn btn-primary btn-custom">CONTINUE REGISTRATION </button>
                    </form>

                    <div class="already-member">
                        <p>Already A Member? <a href="/Login/Index">Login</a></p>
                    </div>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="bg-uploader bg-orange signup mt-0">
                    <h1>
                        Dear Contractor,

                    </h1>
                    <p>
                        Homii is here to help you grow your business.

                    </p>
                    <p>
                        We offer easy-to-use marketing tools designed to help contractors showcase their skills to homeowners across their designated geographic service areas. Homii will help you connect with homeowners posting projects and/or looking to renovate in your area. We will also help manage, and expand your online reputation.
                    </p>
                    <p>
                        Register your business today with Homii to build your online presence, which will help you gain credibility, and get you more work. It’s simple:
                    </p>
                    <div>
                        <ul>
                            <li>
                                Include basic company information for us to communicate with you, and allow homeowners to privately contact you when they’re looking to hire

                            </li>
                            <li>
                                Input your business credentials, gallery photos, highlighting your skills, and ensure that you will receive relevant projects
                            </li>
                            <li>
                                Receive real-time projects directly from homeowners in your service area(s) and respond in a timely manner - honestly and kindly - to win their business
                            </li>
                        </ul>
                    </div>
                    <p>

                        If you have any questions, feel free to email us at <a href="mailto:hello@homii.ca" class="text-white" target="_blank">hello@homii.ca</a>.

                    </p>
                    <p>
                        Kind Regards,

                    </p>
                    <p> Team Homii</p>
                 
                </div>
            </div>
        </div>
    </div>
</div>
@section FooterScripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.js"></script>

    <script>
        $("body").addClass("login-footer");
    </script>

    <script src='https://www.google.com/recaptcha/api.js'></script>
    <script src="~/scripts/PageJS/SignUp.js"></script>
}

