<div class="container">

    <h2 class="mb-3 mt-50 color-orange w-700">Categories</h2>

    <ul class="ul_licities">
        @for (int j = 0; j < @CategoriesName.Count; j++)
        {
            <li>
                <a href="~/SearchContractor/Index?CategoryName=@CategoriesName[j].CategoryName" class="">@CategoriesName[j].CategoryName</a>
            </li>

        }
    </ul>
    <br />


    <div class="row">
        <div class="col-md-12">
            <h2 class="mb-3 mt-50 color-orange w-700">Cities</h2>
        </div>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-12">
                <button class="btn btn-cstm btn-block btn-orange">@item.ProvinceName</button>
                <ul class="ul_licities">
                    @{
                        if (item.CityName != null)
                        {
                            string[] CityNamesData = item.CityName.Split(',');
                            foreach (var Citynameitem in CityNamesData)
                            {
                                string[] ProvCityNames = Citynameitem.Split('-');
                                <li><a href="~/SearchContractor/Index?CitieName=@ProvCityNames[1]">@ProvCityNames[1]</a></li>
                                i++;
                                //if (i == 10)
                                //{
                                //    break;
