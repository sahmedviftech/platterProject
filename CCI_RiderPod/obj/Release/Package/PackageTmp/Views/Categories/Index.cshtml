<!-- Add Modal -->
<div class="modal fade" id="addmodal" tabindex="-1" role="dialog" aria-labelledby="write-a-reviewLabel" aria-hidden="true">
    <div class="modal-dialog modal-md" role="document">
        <form class="parsleyvalcs" id="cat-form">
            <div class="modal-content modal-content-review">
                <div class="modal-header">
                    <h5 class="modal-title" id="write-a-reviewLabel">Add Categories</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body modal-body-review">
                    <div class="row m_-10 editprofile">
                        <div class="col-md-6 p_10">
                            <div class="form-group">
                                <label>Category Name</label>
                                <input type="text" class="form-control" value="" id="CategoryName" data-parsley-required-message="Category name is required" required data-parsley-trigger="keyup">
                            </div>
                            <div class="form-group">
                                <label>Category Charges</label>
                                <input type="text"   data-parsley-type="digits" class="form-control" value="" id="CategoryCharges" data-parsley-required-message="Category Charges is required" required data-parsley-type="number" data-parsley-trigger="keyup">
                            </div>

                            @*<div class="form-group">
                                    <label>Slugs</label>
                                    <input type="text" class="form-control" id="SlugsAdd">
                                </div>*@



                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary btn-custom" id="btnSave">Save Changes</button>
                </div>
            </div>
        </form>
    </div>
</div>


<!-- Edit Modal -->
<div class="modal fade" id="editmodal" tabindex="-1" role="dialog" aria-labelledby="write-a-reviewLabel" aria-hidden="true">
    <div class="modal-dialog modal-md" role="document">
        <form class="parsleyvalcs" id="catup-form">
