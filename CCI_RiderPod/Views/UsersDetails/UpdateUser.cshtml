                                    <option value="Sole Proprietor">Sole Proprietor</option>
                                    <option value="Partnership">Partnership</option>
                                    <option value="Incorporated">Incorporated</option>
                                    <option value="Limited Partnership">Limited Partnership</option>

                                </select>
                            </div>
                        </div>
                        <div class="col-md-6 p_10">
                            <div class="form-group">
                                <label>In Business Since</label>
                                <input type="text" class="form-control InputValidation" id="InBusinessSince">
                            </div>
                        </div>


                    }
                    <div class="col-md-12 text-right mb-5">
                        <button type="button"  class="btn btn-primary btn-custom" onclick='window.location = "@Url.Action("Index", "UsersDetails")";'>Back</button>
                        <button type="button" class="btn btn-primary btn-custom" id="btnSave">Update</button>
                    </div>
                </div>
            </form>
            
            <div class="card-footer text-right ContractorAccRole" style="display:none">
