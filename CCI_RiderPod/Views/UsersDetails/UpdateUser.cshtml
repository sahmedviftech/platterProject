                            <input type="checkbox" id="IsActive">
                            <label for="IsActive"></label>
                        </div>
                    </div>
                    @if (User.AccountTypeID == 2)
                    {
                        <div class="col-md-6 p_10">
                            <div class="form-group">
                                <label>Company Name</label>
                                <input type="text" class="form-control InputValidation" id="CompanyName" data-parsley-required="true">
                            </div>
                        </div>
                        <div class="col-md-6 p_10">
                            <div class="form-group">
                                <label>Business Phone Number</label>
                                <input type="number" class="form-control InputValidation" id="BusinessPhoneNumber">
                            </div>
                        </div>
                        <div class="col-md-6 p_10">
                            <div class="form-group">
                                <label>Business Address</label>
                                <input type="text" class="form-control InputValidation" id="BusinessAddress" data-parsley-required="true">
                            </div>
                        </div>
                        <div class="col-md-6 p_10">
                            <div class="form-group">
                                <label>Number Of Employee</label>
                                <input type="text" class="form-control InputValidation" id="NumberOfEmployee">
                            </div>
                        </div>
                        <div class="col-md-6 p_10">
                            <div class="form-group">
                                <label>Business Address</label>
                                <input type="text" class="form-control InputValidation" id="BusinessAddress" data-parsley-required="true">
                                <select class="form-control kt-select2" id="LegalStructure">
